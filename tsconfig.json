{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ESNext", "DOM"],
		"module": "ES6",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true
	},
	"include": [
		"./src/**/*"
	]
}
